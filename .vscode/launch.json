{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Next.js: Local",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/next/dist/bin/next",
			"args": ["dev", "--turbopack"],
			"internalConsoleOptions": "openOnSessionStart",
			"cwd": "${workspaceFolder}",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"APP_ENV": "local"
			},
			"serverReadyAction": {
				"pattern": "- Local:.+(https?://.+)",
				"uriFormat": "%s",
				"action": "openExternally"
			},
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**",
				"!**/.next/**"
			]
		},
		{
			"name": "Next.js: Development",
			"type": "node-terminal",
			"request": "launch",
			"command": "pnpm dev:development",
			"cwd": "${workspaceFolder}",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"APP_ENV": "development"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
		}
	],
	"compounds": [
		{
			"name": "Full Stack: Local",
			"configurations": ["Next.js: Local"],
			"presentation": {
				"hidden": false,
				"group": "Development",
				"order": 1
			},
			"stopAll": true
		},
		{
			"name": "Full Stack: Development",
			"configurations": ["Next.js: Development"],
			"presentation": {
				"hidden": false,
				"group": "Development",
				"order": 2
			}
		}
	]
}
