{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Full stack",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "outputCapture": "std",
      "env": { "FORCE_COLOR": "1", "NODE_OPTIONS": "--enable-source-maps" },
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Launch Brave",
        "pattern": "http://localhost:3000"
      }
    },
    {
      "name": "Launch Brave",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser"
    }
  ]
}
